#include <stdio.h>
void menu()
{
    printf("***********************");
    printf("***1.add 2.sub*********");
    printf("***3.mul 4.div*********");
    printf("***0.exit**************");
    printf("***********************");
}
int Add(int x, int y)
{
    return x + y;
}
int Sub(int x, int y)
{
    return x - y;
}
int Mul(int x, int y)
{
    return x * y;
}
int Div(int x, int y)
{
    return x / y;
}
int main()
{
    int input = 0;
    int x = 0;
    int y = 0;
    int ret = 0;
    int (*pfarr[])(int, int) = {0, Add, Sub, Mul, Div};
    do
    {
        menu();
        printf("%d", &input);
        scanf("%d", &input);
        if (input == 0)
        {
            printf("退出计算器\n");
        }
        else if (input >= 1 && input <= 4)
        {
            printf("请输入两个操作数\n");
            scanf("%d %d", &x, &y);
            ret = pfarr[input](x, y);
            printf("%d\n", ret);
        }
        else
        {
            printf("选择错误\n");
        }
    } while (input);
    
    return 0;
}